        ocaml-compiler: 5.3.0
        opam-disable-sandboxing: true
    - run: opam install -y ppx_deriving ocamlfind parmap batteries

    - name: Install apt requirements
      run: install/install_apt.sh

    - name: Test
      run: $(pwd)/test/test_action.sh

